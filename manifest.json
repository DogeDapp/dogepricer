{
  "manifest_version": 2,

  "name": "Doge Pricer",
  "short_name": "Doge Pricer",
  "description": "Extension that pulls the last trade price of DOGE in BTC from Cryptsy's API",
  "version": "1.0",
  "author": "Marcus McCurdy",

  "permissions": [
    "http://pubapi.cryptsy.com/",
    "https://vircurex.com/api/*"
   ],
    
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },

  "browser_action": {
    "default_icon": {
        "19": "icon19.png",
        "38": "icon38.png"
    },
    "default_title": "DOGE Price",
    "default_popup": "popup.html"
  }
}
